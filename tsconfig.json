{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "react-native-nvshortvideo": ["./src/index"]
    },
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["dom", "es2017"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "lib",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext"
  },
  "include": ["src/**/*.ts", "src/**/**/*.ts", "src/**/**/**/*.ts", "src/*.ts"],
  "exclude": ["node_modules", "lib"]
}
